						</tr>
					</thead>
					<tbody>

						<%
                        User u = (User) session.getAttribute("userobj");
                        WishlistDAOImpl dao = new WishlistDAOImpl(DBConnect.getConn());
                        List<Wishlist> wishlist = dao.getProductbyUser(u.getId());
                        for (Wishlist w : wishlist) {
                        %>
